@model MindLog.Models.ViewModels.MoodEntryViewModel

@{
    ViewData["Title"] = "Create Mood Entry";
}

<h1>Create Mood Entry</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Mood"></label>
        @Html.DropDownListFor(m => m.Mood,
                 Model.MoodOptions,
                 "Select mood...",
                 new { @class = "form-control" })
        <span asp-validation-for="Mood" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Note"></label>
        <textarea asp-for="Note" class="form-control"></textarea>
        <span asp-validation-for="Note" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
